<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPortfolioApp.Views.ExpenseCategoryCardV"
             xmlns:models="clr-namespace:MyPortfolioApp.Models"
             x:DataType="models:ExpenseCategoryAndTypesDTO">

    <Border Padding="5" Margin="5" 
        StrokeShape="RoundRectangle 3,3,3,3" Stroke="DarkGray" StrokeThickness="1">
        <StackLayout>
            <Label Text="{Binding Name}" />
        </StackLayout>
    </Border>
</ContentView>
